{
  "name": "soyhuce/next-ide-helper",
  "description": "Laravel ide helper rebuilt under steroids",
  "keywords": [
    "laravel",
    "ide",
    "autocompletion",
    "phpdoc",
    "phpstorm"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bastien Philippe",
      "email": "bastien.philippe@soyhuce.fr"
    }
  ],
  "require": {
    "php": "^8.0",
    "composer/composer": "^2.0",
    "doctrine/dbal": "^2.10|^3.0",
    "illuminate/console": "^8.67 || ^9.0",
    "illuminate/database": "^8.67 || ^9.0",
    "illuminate/support": "^8.67 || ^9.0",
    "illuminate/view": "^8.67 || ^9.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "orchestra/testbench": "^6.23 || ^7.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Soyhuce\\NextIdeHelper\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Soyhuce\\NextIdeHelper\\Tests\\": "tests"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Soyhuce\\NextIdeHelper\\NextIdeHelperServiceProvider"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": "@composer bin all install --ansi",
    "post-update-cmd": "@composer bin all update --ansi",
    "cs": "vendor/bin/php-cs-fixer fix",
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/phpunit",
    "all": [
      "@cs",
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "composer/package-versions-deprecated": true
    }
  }
}
