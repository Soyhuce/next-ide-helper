{
  "name": "soyhuce/next-ide-helper",
  "description": "Laravel ide helper rebuilt under steroids",
  "keywords": [
    "laravel",
    "ide",
    "autocompletion",
    "phpdoc",
    "phpstorm"
  ],
  "homepage": "https://github.com/soyhuce/next-ide-helper",
  "license": "MIT",
  "authors": [
    {
      "name": "Bastien Philippe",
      "email": "bastien.philippe@soyhuce.fr",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "doctrine/dbal": "^2.10|^3.0",
    "illuminate/console": "^9.0",
    "illuminate/database": "^9.0",
    "illuminate/support": "^9.0",
    "illuminate/view": "^9.0",
    "spatie/laravel-package-tools": "^1.9.2",
    "soyhuce/classmap-generator": "^1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.6",
    "nunomaduro/collision": "^6.0",
    "nunomaduro/larastan": "^2.0.1",
    "orchestra/testbench": "^7.0",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-laravel": "^1.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Soyhuce\\NextIdeHelper\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Soyhuce\\NextIdeHelper\\Tests\\": "tests"
    }
  },
  "scripts": {
    "cs": "vendor/bin/php-cs-fixer fix",
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "all": [
      "@cs",
      "@test",
      "@analyse"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Soyhuce\\NextIdeHelper\\NextIdeHelperServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
